<div>
  <div>
    <h1>
      All boards
    </h1>
  </div>
</div>

<hr>

<% if current_user != nil %>
  <div>
  <div>
    <h2>
      Add a new board
    </h2>

    <form action="/insert_board" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <button>
        Add board
      </button>
    </form>
  </div>
</div>
<% else %>
  <p>You must <a href="users/sign_in"> sign in </a> to create a board.</p>
<% end %>


<hr>

<ul>
  <% @list_of_boards.each do |a_board| %>
    <% matching_user = User.where(id: a_board.user_id).at(0) %>
    <li>
      <a href="/boards/<%= a_board.id %>">
        <%= a_board.name %>
      </a>
      <div>
      <%= matching_user.email %>
      </div>
    </li>
  <% end %>
</ul>
